 
<?xml version="1.0"?>
<particles emitter="box" box_x="5.0" box_y="0.01" box_z="0.5">

    <spreading angle="-30"      />
    
    <velocity  x="0.000"
               y="0.015"
               z="0.000"         />
    
    <material  file="waterfall_particle.png"  />
    
    <!-- Amount of particles emitted per second -->
    <rate      min="440"
               max="480"         />
    
    <!-- Minimal and maximal lifetime of a particle, in milliseconds. -->
    <lifetime  min="700"
               max="1000"         />
    
    <!-- Size of the particles -->
    <size      min="0.7"
               max="0.9"        />
    
    <color     min="255 255 255"
               max="255 255 255" />

    <fadeout   time="300" />

    <gravity   strength="-0.01"
               only-force-time="500" />
</particles>
